{{page-title "Location"}}

<div class="gap-4 grid grid-cols-3 justify-items-center">
	{{#each this.model as |location| }}
		<div class="border border-slate-200 max-w-[275px]" data-test-location-item>
			<div class="border-b-slate-200">
				<img class="border-b border-b-slate-200" src="/images/defaultOfficeImage.png" alt="default office png"/>
			</div>
			<div class="p-8">
				<p class="capitalize mb-2 text-xl">{{location.name}}</p>
				<p class="mb-2">{{location.phone}}</p>
				<button class="bg-green-700 font-bold py-2 px-4 rounded text-white uppercase" type="button">Select</button>
			</div>
		</div>
	{{/each}}
</div>
